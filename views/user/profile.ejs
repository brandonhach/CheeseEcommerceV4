<%- include('../partials/header.ejs') %>
<body class="w-screen h-screen flex flex-col bg-neutral-900 font-sans pt-16">
	<% if(cheeses.length > 0) { %>
	<main class="w-screen overflow-auto bg-neutral-900 text-white mb-10">
		<div class="flex flex-col items-center justify-center">
			<h2 class="text-amber-100 text-4xl font-bold pt-4">Welcome, <%= user.firstName %> <%= user.lastName %></h2>

			<div class="p-6 flex flex-row items-center justify-center w-1/2">
				<table
					class="bg-neutral-800 w-full text-white rounded-md h-10 pl-2 border-2 border-neutral-950 table-fixed"
				>
					<thead class="">
						<tr>
							<th class="w-12">Image</th>
							<th class="w-24">Item</th>
							<th class="w-12">Status</th>
							<th class="w-24">Action</th>
						</tr>
					</thead>

					<tbody class="">
						<% cheeses.forEach(cheese => { %>
						<tr class="divide-y">
							<td>
								<div class="w-full flex flex-row items-center rounded-md p-4">
									<img src="<%= cheese.image %>" alt="" class="" />
								</div>
							</td>
							<td>
								<div class="flex flex-row items-center justify-center w-full">
									<h1 class="text-2xl underline">
										<a href="/listing/item/<%= cheese.id %>"><%= cheese.title %></a>
									</h1>
								</div>
							</td>
							<td>
								<div class="flex flex-row items-center justify-center w-full">
									<h1 class="text-2xl"><%= cheese.active %></h1>
								</div>
							</td>
							<td>
								<div class="flex flex-row items-center justify-center w-full gap-4">
									<form action="/listing/item/<%= cheese.id %>/edit" class="inline-block w-16">
										<button
											type="submit"
											class="text-white bg-amber-700 hover:bg-amber-800 focus:outline-none focus:ring-4 focus:ring-amber-300 font-medium rounded-full text-sm px-5 py-2.5 text-center me-2 mb-2 dark:bg-amber-600 dark:hover:bg-amber-700 dark:focus:ring-amber-800 w-full flex flex-row items-center justify-center gap-1"
										>
											<svg
												xmlns="http://www.w3.org/2000/svg"
												height="16"
												width="16"
												viewBox="0 0 512 512"
											>
												<!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.-->
												<path
													fill="#ffffff"
													d="M441 58.9L453.1 71c9.4 9.4 9.4 24.6 0 33.9L424 134.1 377.9 88 407 58.9c9.4-9.4 24.6-9.4 33.9 0zM209.8 256.2L344 121.9 390.1 168 255.8 302.2c-2.9 2.9-6.5 5-10.4 6.1l-58.5 16.7 16.7-58.5c1.1-3.9 3.2-7.5 6.1-10.4zM373.1 25L175.8 222.2c-8.7 8.7-15 19.4-18.3 31.1l-28.6 100c-2.4 8.4-.1 17.4 6.1 23.6s15.2 8.5 23.6 6.1l100-28.6c11.8-3.4 22.5-9.7 31.1-18.3L487 138.9c28.1-28.1 28.1-73.7 0-101.8L474.9 25C446.8-3.1 401.2-3.1 373.1 25zM88 64C39.4 64 0 103.4 0 152V424c0 48.6 39.4 88 88 88H360c48.6 0 88-39.4 88-88V312c0-13.3-10.7-24-24-24s-24 10.7-24 24V424c0 22.1-17.9 40-40 40H88c-22.1 0-40-17.9-40-40V152c0-22.1 17.9-40 40-40H200c13.3 0 24-10.7 24-24s-10.7-24-24-24H88z"
												/>
											</svg>
										</button>
									</form>
									<form
										action="/listing/item/<%= cheese.id %>?_method=DELETE"
										method="POST"
										class="inline-block w-16"
									>
										<button
											type="submit"
											class="text-white bg-amber-700 hover:bg-amber-800 focus:outline-none focus:ring-4 focus:ring-amber-300 font-medium rounded-full text-sm px-5 py-2.5 text-center me-2 mb-2 dark:bg-amber-600 dark:hover:bg-amber-700 dark:focus:ring-amber-800 w-full flex flex-row items-center justify-center gap-1"
										>
											<svg
												xmlns="http://www.w3.org/2000/svg"
												height="16"
												width="14"
												viewBox="0 0 448 512"
											>
												<!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.-->
												<path
													fill="#ffffff"
													d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z"
												/>
											</svg>
										</button>
									</form>
								</div>
							</td>
						</tr>
						<% }) %>
					</tbody>
				</table>
			</div>
		</div>
	</main>
	<% } else { %>
	<div class="flex flex-col justify-center items-center w-full h-full">
		<div class="w-1/2 h-1/2 flex flex-col items-center gap-4">
			<h1 class="text-amber-300 text-4xl font-bold text-center">You have not created any cheeses</h1>
		</div>
	</div>

	<% } %>
</body>
<%- include('../partials/footer.ejs') %>
