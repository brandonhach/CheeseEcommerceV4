<%- include('./partials/header.ejs') %>
<body class="w-screen h-screen flex flex-col bg-neutral-900 font-sans">
	<main class="w-screen h-5/6 grid grid-cols-2 grid-rows-2 bg-neutral-900 p-2 pt-24">
		<div class="bg-neutral-900 row-span-2 m-2">
			<div class="w-full h-full grid grid-cols-2 grid-rows-2 gap-4">
				<div class="relative w-full h-full border-4 rounded-lg border-neutral-950">
					<img
						src="/images/index/cheese-bodyguard.png"
						alt=""
						class="absolute inset-0 w-full h-full object-cover"
					/>
				</div>
				<div class="relative w-full h-full border-4 rounded-lg border-neutral-950">
					<img
						src="/images/index/cheese-neo-gothic.png"
						alt=""
						class="absolute inset-0 w-full h-full object-cover"
					/>
				</div>
				<div class="relative w-full h-full border-4 rounded-lg border-neutral-950">
					<img
						src="/images/index/cheese-bank.png"
						alt=""
						class="absolute inset-0 w-full h-full object-cover"
					/>
				</div>
				<div class="relative w-full h-full border-4 rounded-lg border-neutral-950">
					<img
						src="/images/index/cheese-connoisseur-american.png"
						alt=""
						class="absolute inset-0 w-full h-full object-cover"
					/>
				</div>
			</div>
		</div>

		<div
			class="flex flex-row justify-evenly bg-neutral-800 m-2 border-4 border-neutral-950 rounded-lg gap-5 items-center"
		>
			<img src="/images/brand-logo.png" alt="brand" class="h-full" />
			<div class="w-full pr-1 lg:pr-8 xl:pr-16">
				<p class="text-amber-50 text-2xl font-thin">
					A symphony of flavors awaits as you explore our meticulously chosen selection of artisanal cheeses,
					each a testament to the craftsmanship and dedication of cheesemakers worldwide.
				</p>
			</div>
		</div>
		<div
			class="bg-neutral-800 flex flex-col m-2 border-4 border-neutral-950 rounded-lg justify-evenly items-center"
		>
			<div class="flex flex-col justify-start items-center gap-4">
				<div class="h-3/4 w-full flex flex-col items-center gap-2">
					<h1 class="text-amber-100 text-4xl font-bold">Where Every Bite is a Taste of Elegance</h1>
					<h3 class="text-amber-50">
						Discover the pinnacle of dairy opulence that awaits your discerning palate
					</h3>
					<div class="flex flex-row">
						<img src="/images/badge.png" alt="badge" class="h-28" />
						<img src="/images/badge2.png" alt="badge" class="h-28" />
						<img src="/images/badge3.png" alt="badge" class="h-28" />
					</div>
				</div>
				<div class="h-full w-full">
					<form action="/listing" class="h-full w-full relative inline-flex justify-center items-center">
						<button
							type="submit"
							class="text-white bg-amber-700 hover:bg-amber-800 focus:outline-none focus:ring-4 focus:ring-amber-300 font-medium rounded-full text-sm px-5 py-2.5 text-center me-2 mb-2 dark:bg-amber-600 dark:hover:bg-amber-700 dark:focus:ring-amber-800 w-1/4"
						>
							Browse our Catalog
						</button>
					</form>
				</div>
			</div>
		</div>
	</main>
</body>
<%- include('./partials/footer.ejs') %>
